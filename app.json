{
  "expo": {
    "name": "soccer-stats-app",
    "slug": "soccer-stats-app",
    "version": "1.0.0",
    "orientation": "portrait",
    
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "metacritic",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "android": {
        "adaptiveIcon": {
        "backgroundColor": "#ffffff"
      },
      "permissions": ["INTERNET"],
      "usesCleartextTraffic": true
    },
    "web": {
      
      "bundler": "metro"
    },
    "plugins": [
      "expo-router"
    ]
  }
}
